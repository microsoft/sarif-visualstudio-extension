<UserControl x:Class="Microsoft.Sarif.Viewer.Controls.FeedbackControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Microsoft.Sarif.Viewer.Controls"
             mc:Ignorable="d" >
    <StackPanel>
        <TextBlock Margin="10" Text="{Binding Path=Summary}" Width="350" TextWrapping="WrapWithOverflow"></TextBlock>
        <CheckBox Margin="10" IsChecked="{Binding Path=SendSnippet}">Send code snippet from file?</CheckBox>        
        <Label Margin="10,0,0,0" Padding="0">Comments:</Label>
        <TextBox
            Height="120"
            Width="350"
            TextWrapping="Wrap"
            AcceptsReturn="True"
            Margin="10,5,10,0"
            VerticalScrollBarVisibility="Auto"
            Text="{Binding Path=Comment}"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,2,0">
            <Button Width="80" Height="21" Margin="5" Command="{Binding Path=SendFeedbackCommand}">Report</Button>
            <Button Width="80" Height="21" Margin="10" IsCancel="True">Cancel</Button>
        </StackPanel>
    </StackPanel>
</UserControl>
